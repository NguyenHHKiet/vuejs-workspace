{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:vue/vue3-essential",
		"standard-with-typescript",
		"prettier",
		"eslint-config-prettier"
	],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["vue"],
	"rules": {
		"indent": ["warn", "tab"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"prettier/prettier": "error",
		"vue/multi-word-component-names": "off",
		"vue/no-multiple-template-root": "off",
		"no-undef": "off"
	}
}
